
<%= simple_form_for(@player) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true %>
    <%= f.input :last_name, required: true %>
    <%= f.input :number, required: true %>
    <%= f.association :team, label_method: :city_nickname, value_method: :id %>
    <%= f.association :positions, collection: Position.all.order(:name), value_method: :id, include_hidden: false, include_blank: false, as: :check_boxes, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
