
<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :city, required: true %>
    <%= f.input :nickname, required: true %>
    <%= f.input :colors, required: true %>
    <%= f.input :email, required: true %>
    <%= f.label :image, label: 'Logo:' %>
    <% if @team.image.attached? %>
    <!-- @post.image.present? will always return true, use attached? to check presence -->
    <%= image_tag @team.image %>
    <% end %>  
    <%= f.file_field :image, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
